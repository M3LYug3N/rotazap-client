{
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "bracketSpacing": true,
  "printWidth": 80,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/api/(.*)$",
    "^@/bootstrap/(.*)$",
    "^@/config/(.*)$",
    "^@/features/(.*)$",
    "^@/components/(.*)$",
    "^@/data/(.*)$",
    "^@/hooks/(.*)$",
    "^@/libs/(.*)$",
    "^@/store/(.*)$",
    "^@/utils/(.*)$",
    "^@/common/(.*)$",
    "^@/styles/(.*)$",
    "^../(.*)$",
    "^./(.*)$",
    "([.scss, .css])$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
